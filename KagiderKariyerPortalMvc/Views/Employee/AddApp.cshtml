@model KagiderKariyerPortal.Entities.ConCreate.IlanBasvuru

@{
    ViewBag.Title = "Başvur";
    Layout = "../Shared/_Layout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@*@ViewBag.Message*@İlana Başvuru yapmadan önce ön yazı giribilirsiniz..</h2>
</hgroup>

@using (Html.BeginForm("AddApp", "Employee", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form", id = "updateForm"}))
{
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.IlanId)
   
    @Html.HiddenFor(m => m.Ilan)

     
    <table class="pure-table pure-table-horizontal">
        <tr>
            <td>Başvuru Durumu</td>
            <td>Aktif @Html.CheckBoxFor(m=>m.BasvuruDurum,htmlAttributes:new{@class="pure-checkbox"})</td>
        </tr>
        <tr>
            <td>Ön Yazı</td>
            <td>
                @Html.TextAreaFor(m => m.Onyazi, new { @class = "pure-controls" })
                @Html.ValidationMessageFor(m => m.Onyazi)
            </td>
        </tr>
        <tr>
            <td>
                @if (!ViewBag.BasvuruVarmi)
                {
                    <input type="submit" value="Başvur" class="btn btn-warning" />
                }
                else
                {
                    <strong> Bu İlana Daha Önce Başvuru Yapmışsınız.</strong>
                }
            </td>
        </tr>
    </table>
    
    
    
}
