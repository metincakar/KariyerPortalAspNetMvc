@model KagiderKariyerPortalMvc.Models.LocalPasswordModel
@{
    ViewBag.Title = "Hesap Yönetimi";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<p class="message-success">@ViewBag.StatusMessage</p>

<p><strong>@User.Identity.Name</strong> adlı hesabınız ile sisteme bağlısınız.</p>

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{
    @Html.Partial("_SetPasswordPartial")
}

