@model System.Collections.Generic.List<KagiderKariyerPortal.Entities.ConCreate.CvDilBilgi>



@if (Model.Count > 0)
{
    <div class="language-info info-box" id="dvYdil">
        <h3>Yabancı Dil  @Html.ActionLink("Ekle", "AddDil", null, new { @class = "editDialog add-btn", title = "Yabanci Dil Ekle", en = "550", boy = "220" })</h3>
        <ul class="pers-langs clearfix" id="dvDiller">
            <li class="table-col">

                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tbody id="bodyDil">
                        <tr>
                            <th class="lg-blank">&nbsp;</th>
                            <th class="lg-blank">&nbsp;</th>
                            <th><span id="lblOkumaRes">Okuma</span></th>
                            <th><span id="lblYazmaRes">Yazma</span></th>
                            <th> <span id="lblKonusmaRes">Konuşma</span></th>
                            <th class="lg-blank">&nbsp;</th>
                        </tr>
                        @{ int say = 0; }

                        @foreach (var cvDiller in Model)
                        {

                            string okuma = string.Format("okuma{0}", cvDiller.DilBilgId);
                            string yazma = string.Format("yazma{0}", cvDiller.DilBilgId);
                            string konusma = string.Format("konusma{0}", cvDiller.DilBilgId);
                            <tr>
                                <td class="lang-title"><strong>@cvDiller.Dil</strong></td>
                                <td>&nbsp;</td>
                                <td id="@okuma">@cvDiller.Okuma</td>
                                <td id="@yazma">@cvDiller.Yazma</td>
                                <td id="@konusma">@cvDiller.Konusma</td>
                                <td>

                                    @Html.ActionLink("Düzenle", "EditDil", new { id = cvDiller.DilBilgId }, new { @class = "editDialog edit-btn", title = "Yabanci Dil Düzenle", en = "550", boy = "220", sil = "1" })

                                </td>
                            </tr>
                            say++;
                        }


                    </tbody>
                </table>

            </li>

        </ul>

    </div>
}
else
{
    <div id="divDillerBos" class="short-info info-box empty-box">
        <h3> Yabancı Dil </h3>
        <div class="empty-area">
            <span>

                @Html.ActionLink("Bilginizi ekleyin", "AddDil", null, new { @class = "editDialog add-btn", title = "Yabanci Dil Ekle", en = "400", boy = "220" })
            </span>
        </div>
    </div>
}
@Html.Partial("_ScriptsDialog")