@model System.Collections.Generic.List<KagiderKariyerPortal.Entities.ConCreate.CvSeminerler>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@foreach (var sem in Model)
{
    <div class="course-item">
        <strong class="clearfix"><span>@sem.EgitimAd</span> <a href="@Url.Action("EditSeminer","Cv",routeValues:new{id=sem.SeminerId})" en="610" boy="350" title="Seminer Düzenle" class="editDialogSeminer edit-btn">Düzenle</a></strong>
        <span>@sem.EgitimKurumu - @sem.EgitimBaslangic-@sem.EgitimBitis (@sem.EgitimSure Saat)</span>
        <p>@sem.Aciklama</p>
    </div>
}


<script type="text/javascript">

    $(document).ready(function () {
        var linkObj;
        $(function () {

            $.ajaxSetup({ cache: false });
            $(".editDialogSeminer").click(function () {
                //change the title of the dialog

                linkObj = $(this);
                var dialogDiv = $('#updateDialogSeminer');
                var viewUrl = linkObj.attr('href');
                var title = linkObj.attr('title');
                var en = linkObj.attr('en');
                var boy = linkObj.attr('boy');
                $('#updateDialogSeminer').dialog({
                    autoOpen: false,
                    height: 'auto',
                    width: en,

                    title: title,
                    resizable: true,
                    modal: true,
                    draggable: true,
                    open: function (event, ui) {
                        $(this).load(viewUrl);
                    },
                    close: function (event, ui) {
                        $('#updateDialogSeminer').dialog('destroy').empty();
                    }

                });
                dialogDiv.dialog('open');
                return false;
            });
        });



    });


</script>


