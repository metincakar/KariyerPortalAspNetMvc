@model KagiderKariyerPortalMvc.Models.RegisterModel
@{
    ViewBag.Title = "Üye Kayıt";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Yeni bir hesap oluşturun.</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.AccountName)
                @Html.TextBoxFor(m => m.AccountName)
            </li>
            <li>
                @Html.LabelFor(m => m.AccountSurName)
                @Html.TextBoxFor(m => m.AccountSurName)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="Kaydet" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
