    <body>
        <header>
            <div id="commonMessage"></div>
            <div class="content-wrapper">
                <div class="float-left">

                    
                    <p class="site-title"><img src="~/Images/logokagider.png" />@Html.ActionLink(" Online İnsan Kaynakları Platformu", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Ana Sayfa", "Index", "Home")</li>
                            <li>@Html.ActionLink("İlanlar", "Index", "Home")</li>
                            @if ((Session["uid"]==null))
                            {
                                <li>@Html.ActionLink("Öz Geçmiş Oluştur", "Employee", "Home")</li>
                                <li>@Html.ActionLink("İş Veren", "Employer", "Home")</li>
                            }
                            else if (Session["uid"] != null && (int)(Session["typeid"])==0 )
                            {
                                <li>@Html.ActionLink("Öz Geçmiş", "Index", "Cv")</li>
                            }
                            else if (Session["uid"] != null && (int) (Session["typeid"]) == 1)
                            {
                                <li>@Html.ActionLink("İlan Verin", "Index", "Ilan")</li>
                            }

                            <li>@Html.ActionLink("Hakkında", "About", "Home")</li>
                            <li>@Html.ActionLink("İletişim", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
           @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Kagider</p>
                </div>
            </div>
        </footer>

       
        @RenderSection("scripts", required: false)
        

       
      
        

    </body>
