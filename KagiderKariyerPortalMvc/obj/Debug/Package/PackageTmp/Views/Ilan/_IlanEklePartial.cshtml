    {
        @Html.HiddenFor(m => m.UserId)
        @Html.HiddenFor(m=>m.FirmaId)
         @Html.HiddenFor(m=>m.IlanDurum)
        <section>
            <div class="panel panel-primary">
                <div class="panel-heading">İlan Ekle</div>
                <div class="panel-body">
