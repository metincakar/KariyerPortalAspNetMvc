{
    <span class="alert alert-warning " style="display: block">Bu sayfalara erişebilmek için üye olmanız gerekmektedir. Üye iseniz lütfen sisteme giriş yapınız.</span>
}
<hgroup class="title">
    <h3>@ViewBag.Title.</h3>
    @*<h4>@ViewBag.Message</h4>*@
</hgroup>
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>

        </div>
    </section>
}


