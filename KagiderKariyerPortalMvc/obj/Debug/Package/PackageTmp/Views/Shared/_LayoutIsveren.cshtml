@using KagiderKariyerPortalMvc
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Kagider Online İnsan Kaynakları Platformu</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
                @Styles.Render("~/Content/css")
        <!-- Select2 -->
        <link rel="stylesheet" href="~/Content/select2.min.css">
        <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
        @Scripts.Render("~/bundles/jquery")
        <script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="https://netdna.bootstrapcdn.com/twitter-bootstrap/2.0.4/js/bootstrap-dropdown.js"></script>  
        @*<link href="~/Content/frontend.min.css" rel="stylesheet" media="screen,print" />*@
        <link href="~/Content/frontend.css" rel="stylesheet" media="screen,print" />
      
        <link href="~/Content/Atlantis.css" rel="stylesheet" media="screen,print" />
        <link href="~/Content/kagider.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.css" rel="stylesheet" media="screen,print" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-theme.css" rel="stylesheet" media="screen,print" />
        <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        @Scripts.Render("~/bundles/modernizr")

       
    </head>
    <body>
        <header>
            <div id="commonMessage"></div>
            <div class="content-wrapper">

                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img alt="Brand" class="img-rounded" style="width: 25mm;" src="~/Images/logokagider.png" /></a>
                            <p class="navbar-text">İnsan kaynakları platformu</p>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">İlanlar <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li >@Html.ActionLink("İlanlarım", "MyIlan", "Ilan")</li>
                                        <li>@Html.ActionLink("Başvurular", "AppIlan", "Employer")</li>
                                        <li role="separator" class="divider"></li>
                                        <li>@Html.ActionLink("İlan Yayınla", "AddIlan", "Ilan")</li>

                                    </ul>
                                </li>
                                <li>@Html.ActionLink("Özgeçmiş Bankası", "CvBank", "Employer")</li>
                                <li>@Html.ActionLink("Hakkında", "About", "Home")</li>
                                <li>@Html.ActionLink("İletişim", "Contact", "Home")</li>
                               
                            </ul>

                            <div class="navbar-form navbar-left">

                            </div>
                            <div class="nav navbar-nav navbar-right " style="padding: 2mm">
                                @Html.Partial("_LoginPartialIsveren")
                              


                            </div>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
              
            </div>
        </header>
        <div id="body">
           @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
            
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Kagider</p>
                </div>
            </div>
        </footer>

       
        @RenderSection("scripts", required: false)
        

        <!-- Select2 -->
        <script src="@Url.Content("~/Scripts/select2.full.min.js")"></script>
        <script>
            $(".nav a").on("hover", function () {
                $(".nav").find(".active").removeClass("active");
                $(this).parent().addClass("active");
            });
        </script>
        

    </body>
</html>
