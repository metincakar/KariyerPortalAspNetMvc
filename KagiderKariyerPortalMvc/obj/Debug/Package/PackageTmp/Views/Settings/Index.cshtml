@model KagiderKariyerPortal.Dal.ConCreate.EntityFramework.SubCategory
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!-- Content Wrapper. Contains page content -->

    <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
       Kontrol panel
        <small>Kategori ayarları</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Settings</a></li>
        <li><a href="#">Ayarlar</a></li>
        <li class="active">Kategori ayarları</li>
    </ol>
</section>
<section class="content">
    <!-- general form elements disabled -->
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Kategori tanımları</h3>
                </div><!-- /.box-header -->
                <div class="box-body">

                    @using (Html.BeginForm("AddSubCategory", "Settings", FormMethod.Post, htmlAttributes: new { role = "form" }))
                    {
                        @Html.HiddenFor(m => m.OurCompanyId)
                        <!-- select -->
                        <div class="form-group">
                            <label>Kategori</label>
                            @Html.DropDownListFor(m => m.MainCategoryId, new SelectList(ViewBag.ListCategory, "MainCategoryId", "MainCategoryName"),"KategoriSeçiniz", new { data_native_menu = "false", @class = "searchSelect form-control" })
                        </div>
                        <!-- text input -->
                        <div class="form-group">
                            <label>Alt Kategori</label>
                            @Html.TextBoxFor(m => m.SubCategoryName, htmlAttributes: new { @class = "form-control", placeholder = "Enter ..." })

                        </div>
                        <div class="form-group">
                            <label>İlişkili Kategori</label>
                            @Html.DropDownListFor(m => m.RelatedId, new SelectList(ViewBag.ListCategory, "MainCategoryId", "MainCategoryName"), "İlişkili Kategori", new { data_native_menu = "false", @class = "form-control" })
                        </div>
                        <!-- textarea -->
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="3" placeholder="Enter ..."></textarea>
                        </div>

                 

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>





                    }
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>

        <!-- right column -->
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Tanımlı alt kategoriler</h3>
                    <!--<div class="box-tools">
                            <ul class="pagination pagination-sm no-margin pull-right">
                                <li><a href="#">&laquo;</a></li>
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">&raquo;</a></li>
                            </ul>
                        </div>-->
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table">
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Kategori</th>
                            <th>AltKategori</th>
                            <th style="width: 40px">İlişkili kategori</th>
                        </tr>
                        @{
                            int say=0;
                            foreach (var sub in ViewBag.subCatList)
                            {
                                say++;
                                <tr>
                                    <td>@say.</td>
                                    <td>@sub.MCatName</td>
                                    <td>
                                        @sub.SCatName
                                    </td>
                                    <td>@sub.RCatName</td>
                                </tr>
                            }
                        }
                           
                           
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $(".searchSelect").select2();
  });</script>
   



